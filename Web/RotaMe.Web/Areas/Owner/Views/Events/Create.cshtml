@using RotaMe.Web.ViewModels
@using RotaMe.Web.ViewModels.Owner.Projects
@model RotaMe.Web.InputModels.Owner.Events.EventCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <!-- ekko-lightbox css -->
    <link rel="stylesheet" href="~/assets/css/plugins/ekko-lightbox.css">
    <link rel="stylesheet" href="~/assets/css/plugins/lightbox.min.css">
    <link rel="stylesheet" href="~/assets/css/plugins/daterangepicker.css">
    <!-- ekko-lightbox css -->
    <link rel="stylesheet" href="~/assets/css/plugins/select2.min.css">
}

<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
    <div class="pcoded-content">

        <partial name="~/Views/Shared/_BreadcrumbPartial.cshtml" model='new BreadcrumbPartialViewModel() { Controller = "Events", Action = "Create Event"}' />
        <!-- [ Main Content ] start -->
        <div class="row">
            <!-- [ Form Validation ] start -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Create Project Form</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="ProjectId"></label>
                                        <select asp-for="ProjectId" class="js-example-basic-single form-control">
                                            @foreach (var project in (IEnumerable<ProjectsListToCreateEventViewModel>)this.ViewData["projects"])
                                            {
                                                if (project.Selected)
                                                {
                                                    <option selected value="@project.Id">@project.Title</option>
                                                }
                                                else
                                                {
                                                    <option value="@project.Id">@project.Title</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Name"></label>
                                        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Description">Description</label>
                                        <textarea class="form-control" asp-for="Description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Image"></label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="Image" asp-for="Image">
                                            <label class="custom-file-label" asp-for="Image">Choose Image</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn  btn-primary">Create Event</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- [ Form Validation ] end -->
        </div>
        <!-- [ Main Content ] end -->
    </div>
</section>

@section Scripts{

    <!-- jquery-validation Js -->
    <script src="~/assets/js/plugins/jquery.validate.min.js"></script>
    <!-- form-picker-custom Js -->
    <script src="~/assets/js/pages/form-validation.js"></script>
    <!-- datepicker js -->
    <script src="~/assets/js/plugins/moment.min.js"></script>
    <script src="~/assets/js/plugins/daterangepicker.js"></script>
    <script src="~/assets/js/pages/ac-datepicker.js"></script>
    <!-- select2 Js -->
    <script src="~/assets/js/plugins/select2.full.min.js"></script>
    <!-- form-select-custom Js -->
    <script src="~/assets/js/pages/form-select-custom.js"></script>
}

