@model RotaMe.Web.InputModels.Owner.Events.EventNeedEditInputModel

<div class="card">
    <div class="card-body d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Edit Need for this event</h5>
    </div>
    <div class="card-body border-top pro-det-edit collapse show" id="pro-det-edit-1">
        <form id="EditNeedFrom" asp-area="Owner" asp-controller="Events" asp-action="NeedEdit" asp-route-id="@ViewData["eventId"]" method="post" enctype="multipart/form-data">
            <input hidden type="text" class="form-control" asp-for="@Model.NeedId">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="@Model.MinUsers"></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="@Model.MinUsers">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="@Model.MaxUsers"></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="@Model.MaxUsers">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="@Model.NeedDate">Date</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="@Model.NeedDate">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>