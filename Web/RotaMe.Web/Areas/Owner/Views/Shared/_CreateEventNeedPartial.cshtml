@model RotaMe.Web.InputModels.Owner.Events.EventNeedCreateInputModel

<div class="card">
    <div class="card-body d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Create new Need for this event</h5>
    </div>
    <div class="card-body border-top pro-det-edit collapse show" id="pro-det-edit-1">
        <form asp-area="Owner" asp-controller="Events" asp-action="CreateNeed" method="post" enctype="multipart/form-data">
            <input hidden type="text" class="form-control" value="@ViewData["eventId"]" asp-for="@Model.EventId">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="@Model.MinimalUsers"></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="@Model.MinimalUsers">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="@Model.MaximumUsers"></label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="@Model.MaximumUsers">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label font-weight-bolder" asp-for="@Model.Date">Date</label>
                <div class="col-sm-9">
                    <input id="event-create-date" type="text" class="form-control" asp-for="@Model.Date">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>