@model RotaMe.Web.InputModels.Owner.Projects.UserRemoveFromProjectInputModel
@using RotaMe.Web.ViewModels.Owner.Projects
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Remove User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <!-- ekko-lightbox css -->
    <link rel="stylesheet" href="~/assets/css/plugins/select2.min.css">
}

<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
    <div class="pcoded-content">

        <partial name="~/Views/Shared/_BreadcrumbPartial.cshtml" model='new BreadcrumbPartialViewModel() { Controller = "Projects", Action = "Remove User from Project"}' />
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Remove User from Project</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-xl-5 col-md-4 mb-5">
                                    <h5>Select Project</h5>
                                    <hr>
                                    <select asp-for="ProjectId" class="js-example-basic-single form-control project-remove-user-selector">
                                        @foreach (var project in (IEnumerable<ProjectsListToRemoveUserViewModel>)this.ViewData["projects"])
                                        {
                                            if (project.Selected)
                                            {
                                                <option selected value="@project.Id" data-users="@project.Users">@project.Title</option>
                                            }
                                            else
                                            {
                                                <option value="@project.Id" data-users="@project.Users">@project.Title</option>
                                            }
                                            
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-5 col-md-4 mb-5">
                                    <h5>Select User</h5>
                                    <hr>
                                    <select asp-for="Username" class="js-example-basic-single form-control user-remove-selector">
                                        <option value="1">1</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-2 col-md-2 mb-2">
                                    <button type="submit" class="btn  btn-primary mb-2">Remove User</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->

    </div>
</section>
<!-- [ Main Content ] end -->

@section Scripts{
    <!-- select2 Js -->
    <script src="~/assets/js/plugins/select2.full.min.js"></script>
    <!-- form-select-custom Js -->
    <script src="~/assets/js/pages/form-select-custom.js"></script>
    <!-- dinamic-selector -->
    <script src="~/js/DynamicSelect.js"></script>
}
