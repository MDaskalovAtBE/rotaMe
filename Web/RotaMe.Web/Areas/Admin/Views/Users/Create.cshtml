@using RotaMe.Web.ViewModels
@using RotaMe.Web.ViewModels.Identity.Register
@model RotaMe.Web.InputModels.Administration.Users.UserCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <!-- ekko-lightbox css -->
    <link rel="stylesheet" href="~/assets/css/plugins/ekko-lightbox.css">
    <link rel="stylesheet" href="~/assets/css/plugins/lightbox.min.css">
}

<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
    <div class="pcoded-content">

        <partial name="~/Views/Shared/_BreadcrumbPartial.cshtml" model='new BreadcrumbPartialViewModel() { Controller = "Users", Action = "Create User"}' />
        <!-- [ Main Content ] start -->
        <div class="row">
            <!-- [ Form Validation ] start -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Form Validation</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Email"></label>
                                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Password"></label>
                                        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="ConfirmPassword"></label>
                                        <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="UserName"></label>
                                        <input type="text" class="form-control" placeholder="UserName" asp-for="UserName">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="FirstName"></label>
                                        <input type="text" class="form-control" placeholder="FirstName" asp-for="FirstName">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="LastName"></label>
                                        <input type="text" class="form-control" placeholder="LastName" asp-for="LastName">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Gender"></label>
                                        <select class="form-control" asp-for="Gender">
                                            <option disabled>--- Select Gender ---</option>
                                            @foreach (var gender in (IEnumerable<RegisterGenderViewModel>)this.ViewData["genders"])
                                            {
                                                <option value="@gender.Name">@gender.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">

                                        <label class="form-label" asp-for="Avatar"></label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="Avatar" asp-for="Avatar">
                                            <label class="custom-file-label" asp-for="Avatar">Choose Avatar</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn  btn-primary">Create User</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- [ Form Validation ] end -->
        </div>
        <!-- [ Main Content ] end -->
    </div>
</section>

@section Scripts{

    <!-- jquery-validation Js -->
    <script src="~/assets/js/plugins/jquery.validate.min.js"></script>
    <!-- form-picker-custom Js -->
    <script src="~/assets/js/pages/form-validation.js"></script>
}

